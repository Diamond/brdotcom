body {
    margin: 0px;
    background: image-url("navy_blue.png");
    color: #EEE;
    font-family: "Verdana";
    -webkit-text-shadow: 1px 1px 1px #000;
    -moz-text-shadow: 1px 1px 1px #000;
    text-shadow: 1px 1px 1px #000;
}
.blue, a {
    color: #4fb5ff;
}
a:visited {
    color: #1a96ff;
}
article {
    margin-left: 20px;
}
nav ul li {
    display: inline;
    margin-left: 20px;
    margin-right: 20px;
}
#resume-top, .workspace {
    width: 95%;
    margin: 0px auto;
    margin-top: 20px;
    background: #4f4f4f;
    background: rgba(255, 255, 255, 0.1);
    -webkit-border-radius: 7px;
    -moz-border-radius: 7px;
    border-radius: 7px;
    -webkit-box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.5);
    -moz-box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.5);
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.5);
    padding: 5px;
    h1 {
	margin: 0px auto;
	text-align: center;
	padding-bottom: 2px;
    }
    nav {
	text-align: center;
    }
    nav ul li { display: inline; }
}
#contact-details {
    border-bottom: 1px solid #fff;
    text-align: center;
    padding-bottom: 2px;
}
#education article aside {
    margin-left: 20px;
}
#jobs h3 {
    margin-bottom: 5px;
}
section {
    margin-left: 10px;
    aside, article, section {
	margin-left: 20px;
    }
    aside {
	margin-top: -10px;
	font-size: small;
    }
    margin-bottom: 20px;
}
.workspace {
    padding: 20px;
    margin: 0px auto;
    h1 {
	margin: 0px auto;
	text-align: center;
	padding-bottom: 2px;
    }
    input[type="text"],input[type="password"] {
    	width: 100%;
	border: 1px solid #aaa;
	background: #ccc;
    }	
}
#admin {
    width: 100%;
    margin: 0px;
    padding: 10px;
    background: #222;
    border: none;
    border-bottom: 2px solid #4fb5ff;
}
.error {
    color: #ff0000;
}
.toplevel {
    background: #111;
}