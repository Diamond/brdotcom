<div class="workspace">
  <h1>Listing points</h1>
  <br>
  <table>
    <tr>
      <th>Body</th>
      <th>Ordering</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @sections.each do |section| %>
      <% next if section.points.count == 0 %>
      <tr class="toplevel">
        <td colspan="99"><b><%= section.title %></b></td>
      </tr>
      <% section.points.each do |point| %>
      <tr>
	<td><%= raw point.body %></td>
	<td><%= point.ordering %></td>
	<td><%= link_to 'Show', point %></td>
	<td><%= link_to 'Edit', edit_point_path(point) %></td>
	<td><%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% end %>

  </table>

  <br />

  <%= link_to 'New Point', new_point_path %>
</div>
