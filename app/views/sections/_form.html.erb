<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :aside %><br>
      <%= f.text_field :aside %>
    </div>
    <div class="field">
      <%= f.label :ordering %><br>
      <%= f.number_field :ordering %>
    </div>
    <div class="field">
      <%= f.label :parent_id %><br>
      <%= collection_select :section, :parent_id, Section.top_level, :id, :title, :include_blank => "No Parent" %>
    </div>
    <%= f.submit %>
  </div>
<% end %>
