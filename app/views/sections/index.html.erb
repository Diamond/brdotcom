<div class="workspace">
  <h1>Listing sections</h1>
  <br>
  <table>
    <tr>
      <th>Title</th>
      <th>Aside</th>
      <th>Ordering</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @sections.each do |section| %>
      <tr class="toplevel">
        <td><%= section.title %></td>
        <td><%= section.aside %></td>
	<td><%= section.ordering %></td>
	<td><%= link_to 'Show', section %></td>
	<td><%= link_to 'Edit', edit_section_path(section) %></td>
	<td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% section.sections.each do |subsection| %>
      <tr>
        <td><%= subsection.title %></td>
        <td><%= subsection.aside %></td>
	<td><%= subsection.ordering %></td>
	<td><%= link_to 'Show', subsection %></td>
	<td><%= link_to 'Edit', edit_section_path(subsection) %></td>
	<td><%= link_to 'Destroy', subsection, method: :delete, data: { confirm: 'Are you sure?' } %></td>        
      </tr>
      <% end %>
    <% end %>
  </table>

  <br />

  <%= link_to 'New Section', new_section_path %>
</div>
